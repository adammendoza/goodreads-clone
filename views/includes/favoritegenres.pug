mixin genreButton(genre)
    div(class="genre-container__genre col-xs-6 col-sm-3 col-md-3 col-lg-3")
      div(class="genre-container__bstp-formating clearfix")
        div(data-toggle="buttons" class="genre-container__button btn-group")
          label(class="genre-container__button-label rounded-pill btn btn-default")
            div(class="genre-container__button-content")
              input(type="checkbox" name="var_id[]" autocomplete="off" value="")
              span(class="")
              h5 #{genre.name}
