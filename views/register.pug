extends layout.pug

include ./includes/favoriteGenres.pug

block content

  div(class='container genre-container')
    h2(class="genre-container__header") Pick your favorite genres
    form(class="genre-container__form")
      div(class="genre-container__row")
      div(class="form-group genre-container__form-group")
        div(id="availableGenres" class="genre-container__genre-group")
          for genre in genres
            +genreButton(genre)
      div(class="genre-container__button-container")
        label(type="button" id="genre-select-all" class="genre-container__selectAll btn-styling btn btn-default")
        label(type="button" id="genre-submit" class="genre-container__submit-button btn-styling btn btn-default") Submit

  style.
    .genre-container__genre-group {
        margin:20px 0 0 0;
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
    }

    .genre-container__header {
        text-align: center;
    }
    .genre-container__genre-group label.btn-default.active {
        background-color: #007ba7;
        color: #FFF;
    }

    .genre-container__genre-group label.btn-styling{
        width:100%;
        border:1px solid #305891;
        margin:5px;
        border-radius: 23px;
        color: #FFF;
        background-color: skyblue;
        box-shadow: 0px 0px 6px 0px rgba(0, 0, 0, .25);
    }

    .genre-container__genre-group label .genre-container__button-content{
        width:100%;
    }
    .genre-container__genre-group .btn-group{
        width:90%
    }
    .genre-container__genre-text {
        width: 100px;
        text-align: center;
        display: inline-block;
        padding-top: 10px;
    }
    .genre-container__submit-button {

        text-align: center;
        background color: #007ba7;
        width:10%;
        border:1px solid #305891;
        margin:5px;
        border-radius: 23px;
        color: #000;
        box-shadow: 0px 0px 6px 0px rgba(0, 0, 0, .25);
    }

    .genre-container__selectAll {

        text-align: center;
        background color: #007ba7;
        width:10%;
        border:1px solid #305891;
        margin:5px;
        border-radius: 23px;
        color: #000;
        box-shadow: 0px 0px 6px 0px rgba(0, 0, 0, .25);
    }

    .genre-container {
        height: 350px;
        width: 75%;
        background-color: gainsboro;
        border-radius: 10px;
    }

    .genre-container__button-container {
        display: flex;
        justify-content: center;
    }

    .genre-container__button-container label.btn-styling{
        background-color: #007ba7;
    }
  link(rel="stylesheet" type="text/css" href="./bootstrap/css/bootstrap.min.css")
  link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous")
  script(type="text/javascript" src="../bootstrap/js/jquery-1.10.2.min.js")
  script(type="text/javascript" src="../bootstrap/js/bootstrap.min.js")
  script(type="text/javascript" src="../js/register.js")
