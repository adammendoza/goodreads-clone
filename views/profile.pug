extends layout.pug


block content

  append head
    link(rel='stylesheet', href='./css/profile.css')
    //- script(src='../js/user-profile.js' type='module' defer)


  include ./includes/nav.pug

    div(class='container_profile')
      div(class='container_picture ')
        img(class='picture' src=`../images/${book.id}.jpg` alt="bookshelf")

      div(class='container_user-info')
        h2(class='user-info_name')
        h4(class='user-info_email')
        h3(class='user-info_address')

        p(class='user-info_rating-review')

      div(class='container_edit-button')
        button.button-light.edit-button(type='button') Edit

      div(class='container_favorite-genres') Favorite Genres
        div
          each genre in genres
            h3 #{genre.name}

  script(type='module' src='../js/user-profile.js')
